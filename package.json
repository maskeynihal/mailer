{
  "name": "@maskeynihal/mailer",
  "version": "1.1.2",
  "description": "Mail service provider",
  "main": "dist/index.js",
  "author": "maskeynihal",
  "scripts": {
    "clean:build": "rimraf dist",
    "build": "yarn clean:build && tsc",
    "build:watch": "yarn clean:build && tsc -w",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint --fix '*/**/*.{js,ts,tsx}'",
    "prettier": "prettier -c src/**/*.{js,ts,tsx,scss,css,md}",
    "prettier:fix": "prettier -c src/**/*.{js,ts,tsx,scss,css,md} --write",
    "prepare": "husky install",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "src/**/*.{json,scss,css,md}": [
      "yarn prettier:fix"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint:fix"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.583.0",
    "axios": "^1.7.2",
    "ejs": "^3.1.10"
  }
}
